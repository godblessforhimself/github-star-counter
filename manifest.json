{
  "manifest_version": 3,
  "name": "GitHub Star Counter",
  "version": "1.0",
  "description": "Display star counts of GitHub repositories on the current page.",
  "permissions": ["activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/favicon-16x16.png",
      "32": "images/favicon-32x32.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ]
}
